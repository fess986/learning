<h1 class="text-center">Генератор изображений</h1>

<form action="/" method="post">
  <input type="text" class="form-controle mb-2" placeholder="Введите параметры картинки" name="prompt" required>

  <select name="size" class="form-controle mb-2"> 
    <option value="256x256">256x256</option>
    <option value="512x512">512x512</option>
    <option value="1024x1024">1024x1024</option>
  </select>

  <input type="number" class="form-controle mb-2" name="number" value="1">

  <button type="submit" class="btn btn-primary">Сгенерировать!</button>

</form>

{{#if images}}
  <div class="row">
    {{#each images}}
      <img src="{{this.url}}" class="img-fluid rounded" alt="">
    {{/each}}
  </div>
{{/if}}